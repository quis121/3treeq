    // Language switch function
    function switchLang(lang) {
      if (lang === 'en') {
        document.documentElement.lang = 'en';
        document.documentElement.dir = 'ltr';
      } else {
        document.documentElement.lang = lang;
        document.documentElement.dir = 'rtl';
      }

      document.querySelectorAll('[data-key]').forEach(el => {
        const key = el.getAttribute('data-key');
        if (translations[lang] && translations[lang][key]) {
          el.textContent = translations[lang][key];
        }
      });

      // Update placeholders in booking modal
      const bookingModal = document.getElementById('booking-modal');
      if (bookingModal) {
        const inputs = bookingModal.querySelectorAll('input[type="text"]');
        if (inputs[0]) inputs[0].placeholder = translations[lang]['formPickup'] || '';
        if (inputs[1]) inputs[1].placeholder = translations[lang]['formDestination'] || '';

        const select = bookingModal.querySelector('select');
        if (select) {
          const firstOption = select.querySelector('option[disabled]');
          if (firstOption) firstOption.textContent = translations[lang]['formSelectOption'] || '';
          select.querySelector('option[value="standard"]').textContent = translations[lang]['formStandard'] || '';
          select.querySelector('option[value="premium"]').textContent = translations[lang]['formPremium'] || '';
          select.querySelector('option[value="group"]').textContent = translations[lang]['formGroup'] || '';
        }
      }

      // Update placeholders in login modal
      const loginPhone = document.getElementById('login-phone');
      if (loginPhone) loginPhone.placeholder = translations[lang]['loginPhoneLabel'] || '';

      const loginCode = document.getElementById('login-code');
      if (loginCode) loginCode.placeholder = translations[lang]['loginCodeLabel'] || '';

      // Clear login messages and reset login modal UI on language change
            // Clear login messages and reset login modal UI on language change
      closeLoginModal();
      closeBookingModal();

      // Update profile and logout link text if visible
      updateProfileLogoutText();
    }

    // Modal open/close functions
    function openBookingModal() {
      if (!isLoggedIn()) {
        alert(translations[document.documentElement.lang]['btnLogin']);
        openLoginModal();
        return;
      }
      const modal = document.getElementById('booking-modal');
      modal.style.display = 'block';

      const pickupInput = modal.querySelector('input[type="text"]');
      pickupInput.value = '';
      pickupInput.placeholder = translations[document.documentElement.lang]['formPickup'] || '';

      if ("geolocation" in navigator) {
        pickupInput.placeholder = '...Ø¬Ø§Ø±ÙŠ ØªØ­Ø¯ÙŠØ¯ Ø§Ù„Ù…ÙˆÙ‚Ø¹'; // You can translate as needed
        navigator.geolocation.getCurrentPosition(
          (position) => {
            const { latitude, longitude } = position.coords;
            pickupInput.value = `Ø®Ø· Ø§Ù„Ø¹Ø±Ø¶: ${latitude.toFixed(6)}, Ø®Ø· Ø§Ù„Ø·ÙˆÙ„: ${longitude.toFixed(6)}`;
            pickupInput.placeholder = '';
          },
          () => {
            pickupInput.placeholder = translations[document.documentElement.lang]['formPickup'] || '';
          }
        );
      }
    }
    function closeBookingModal() {
      document.getElementById('booking-modal').style.display = 'none';
    }

    function openLoginModal() {
      document.getElementById('login-modal').style.display = 'block';
      document.getElementById('login-step1').style.display = 'block';
      document.getElementById('login-step2').style.display = 'none';
      document.getElementById('login-message').textContent = '';
      document.getElementById('whatsapp-link-container').innerHTML = '';
      document.getElementById('login-phone').value = '';
      document.getElementById('login-code').value = '';
    }
    function closeLoginModal() {
      document.getElementById('login-modal').style.display = 'none';
    }

    // Simple simulated DB for demo purposes
    const simulatedDB = {};

    // Request login code (simulate sending WhatsApp code)
    function requestLoginCode() {
      const phoneInput = document.getElementById('login-phone');
      const phone = phoneInput.value.trim();
      const lang = document.documentElement.lang || 'ar';
      const messageEl = document.getElementById('login-message');

      if (!phone) {
        alert(translations[lang]['loginPhoneRequired']);
        return;
      }

      // Generate 5-digit code
      const code = Math.floor(10000 + Math.random() * 90000).toString();

      // Store code and expiry (5 mins)
      simulatedDB[phone] = { code, expiry: Date.now() + 5 * 60 * 1000 };

      // Show code sent message and WhatsApp link
      messageEl.style.color = 'green';
      messageEl.textContent = translations[lang]['loginCodeSent'];

      const whatsappLinkContainer = document.getElementById('whatsapp-link-container');
      whatsappLinkContainer.innerHTML = `
        <a href="https://wa.me/${phone}?text=Ø±Ù…Ø² Ø§Ù„ØªØ­Ù‚Ù‚ Ø§Ù„Ø®Ø§Øµ Ø¨Ùƒ Ù‡Ùˆ: ${code}" target="_blank" rel="noopener noreferrer" style="color: #25D366;">
          ÙØªØ­ ÙˆØ§ØªØ³Ø§Ø¨ Ù„Ø¥Ø±Ø³Ø§Ù„ Ø§Ù„Ø±Ù…Ø²
        </a>
      `;

      // Show step 2
      document.getElementById('login-step1').style.display = 'none';
      document.getElementById('login-step2').style.display = 'block';
    }

    // Verify code and log user in
    function verifyLoginCode() {
      const phone = document.getElementById('login-phone').value.trim();
      const code = document.getElementById('login-code').value.trim();
      const lang = document.documentElement.lang || 'ar';
      const messageEl = document.getElementById('login-message');

      if (!code) {
        alert(translations[lang]['loginCodeRequired']);
        return;
      }

      const record = simulatedDB[phone];
      if (!record) {
        messageEl.style.color = 'red';
        messageEl.textContent = translations[lang]['loginError'];
        return;
      }
      if (Date.now() > record.expiry) {
        messageEl.style.color = 'red';
        messageEl.textContent = translations[lang]['loginInvalidCode'];
        return;
      }
      if (record.code !== code) {
        messageEl.style.color = 'red';
        messageEl.textContent = translations[lang]['loginInvalidCode'];
        return;
      }

      localStorage.setItem('loggedInUser', phone);
      messageEl.style.color = 'green';
      messageEl.textContent = translations[lang]['loginSuccess'];

      updateProfileLogoutText();

      setTimeout(() => {
        closeLoginModal();
        messageEl.style.color = 'black';
      }, 1500);
    }

    // Check login status
    function isLoggedIn() {
      return !!localStorage.getItem('loggedInUser');
    }

    // Update profile and logout UI
    function updateProfileLogoutText() {
      const lang = document.documentElement.lang || 'ar';
      const profileLink = document.getElementById('profile-link');
      const logoutBtn = document.getElementById('logout-btn');
      if (isLoggedIn()) {
        profileLink.style.display = 'inline-block';
        logoutBtn.style.display = 'inline-block';
        if (lang === 'en') profileLink.textContent = 'Profile';
        else if (lang === 'he') profileLink.textContent = '×¤×¨×•×¤×™×œ';
        else profileLink.textContent = 'Ù…Ù„ÙÙŠ';
      } else {
        profileLink.style.display = 'none';
        logoutBtn.style.display = 'none';
      }
    }

    // Logout function
    function logout() {
      localStorage.removeItem('loggedInUser');
      updateProfileLogoutText();
      alert(document.documentElement.lang === 'en' ? 'Logged out' :
            document.documentElement.lang === 'he' ? '×”×ª× ×ª×§×ª' :
            'ØªÙ… ØªØ³Ø¬ÙŠÙ„ Ø§Ù„Ø®Ø±ÙˆØ¬');
    }

    // Initialize page on load
    window.onload = () => {
      switchLang('ar'); // default Arabic
      updateProfileLogoutText();
    };

    // Close modals on clicking outside modal content
    window.onclick = function(event) {
      const bookingModal = document.getElementById('booking-modal');
      const loginModal = document.getElementById('login-modal');
      if (event.target === bookingModal) closeBookingModal();
      if (event.target === loginModal) closeLoginModal();
    };
  </script>
